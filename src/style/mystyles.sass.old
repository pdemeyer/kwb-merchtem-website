//  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)
//  background-color: #eee
//  margin: 10px

//.card-content
//  background-color: #ccc

.image-49 
    aspect-ratio: 1
    object-fit: cover
    width: 100%
    max-width: 100%
    max-height: 276px
    margin-top: 0


.kleine-raak-small-image
    margin-top: 0
    max-width: 200px

img 
    border-radius: 0
    max-width: 100%
    margin-top: 0
    margin-bottom: 0
    padding-bottom: 0
    display: inline-block
    vertical-align: middle
    border: 0
    overflow-clip-margin: content-box
    overflow: clip

a
  color: #911e37

a:hover
  color: var(--link-hover)
  font-weight: 400
  text-decoration: none




.flex-card-blog 
    border: 20px solid var(--white)
    width: 100%
    margin-top: 0
    margin-bottom: 20px
    padding: 0
    transition: box-shadow .4s


