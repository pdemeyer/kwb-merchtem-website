

@use "_variables"

@use '../../node_modules/bulma/bulma.scss'
@use "../../node_modules/bulma/sass/utilities/initial-variables"

$primary: variables.$primary

//Menu overrides
$menu-item-color: variables.$white-ter
$menu-item-hover-color: variables.$black !important
$menu-item-hover-background-color: variables.$black
$menu-item-active-color: variables.$kaldi-red-invert
$menu-item-active-background-color:	variables.$kaldi-red-invert
$menu-list-border-left: 1px solid variables.$kaldi-red-invert
$menu-label-color: variables.$white-ter

body
  font-family: "Radio Canada Big"

.navbar .navbar-menu
  box-shadow: none !important

.content .taglist
  list-style: none
  margin-bottom: 0
  margin-left: 0
  margin-right: 1.5rem
  margin-top: 1.5rem
  display: flex
  flex-wrap: wrap
  justify-content: left
  align-items: center
  li
    padding: 0 2rem 1rem 0
    margin-bottom: 1.5rem
    margin-top: 0

// Helper Classes
.full-width-image-container
  width: 100vw
  height: 400px
  position: relative
  left: 50%
  right: 50%
  margin: 2em -50vw
  background-size: cover
  background-position: bottom
  display: flex
  justify-content: center
  align-items: center

.full-width-image
    width: 100vw
    height: 400px
    background-size: cover
    background-position: bottom
    display: flex
    justify-content: center
    align-items: center

.btn
    display: inline-block
    padding: 12px 16px 10px
    font-size: 18px
    font-size: 1rem
    line-height: 1.25
    background-color: #fff
    border-radius: .25rem
    text-decoration: none
    font-weight: 700
    color: #CC3700
    text-align: center
    -webkit-box-shadow: inset 0 0 0 2px #CC3700
    box-shadow: inset 0 0 0 2px #f40
    -webkit-transition: all .15s ease
    transition: all .15s ease

.margin-top-0
  margin-top: 0 !important


.navbar 
  --light-light-gray: #91919724
  border-bottom: 1px solid var(--light-light-gray)
.navbar-item .icon
  color: variables.$primary
// Override for use of svg's from https://simpleicons.org/
.icon svg
  width: 1.5rem
  height: 1.5rem
  fill: variables.$primary // currentColor
.navbar-brand .navbar-item.logo
  padding: 0 1rem
footer.footer
  padding: 3rem 0rem 0rem
  background-color: transparent
.navbar-burger
  color: variables.$primary


.menu-label
  font-size: 1em !important
  text-align: left
.menu-list
  list-style: none !important
  text-align: left
.social
  padding: 2em
.social a
    padding: .5em .5em .3em .5em
    border-radius: 1em
    background-color: variables.$white-ter
    margin: .5em
    width: 1em
    height: 1em
    vertical-align: middle
    display: inline

// blog roll
.blog-list-item.is-featured
  background-color: #d6400033
.blog-list-item header
  display: flex
  margin-bottom: 1em
.blog-list-item .featured-thumbnail
  flex-basis: 35%
  margin: 0 1.5em 0 0

  
.kleine-raken-item.is-featured
  background-color: #d6400033
.kleine-raken-item header
  display: flex
  margin-bottom: 1em
.kleine-raken-item .featured-thumbnail
  flex-basis: 100%
  margin: 0 1.5em 0 0


//   flex-flow: column

.post-picture-item
  border-width: 10px
  border-color: #0000


.post-picture-picture
  display: flex
  justify-content: center

.max-width-block
    width: 100%
    margin: 0 auto

.main-container-div
  background: none

.center-content
  display: flex
  justify-content: center

.post-text-box
  display: block

.pages-wrapper 
  background-color: #fff
  border-top: 1px #4772d926
  margin-left: 0
  margin-right: 0
  padding-top: 0
  padding-left: 20px
  padding-right:20px
  position: relative
  inset: 0% 0% auto
  overflow: hidden

.mainpage-content
  padding-top: 0px
  padding-bottom: 10px
  align: center
  --light-light-gray: #91919724
  border-bottom: 1px solid var(--light-light-gray)
  justify-content: center
  align-items: center

.heading-78 
  text-align: center
//  margin-top: 10px

h1 
    clear: none
    text-align: center
    margin-top: 10px
    margin-bottom: 10px
    font-size: 30px
    font-weight: 400
    line-height: 50px

h2 
    color: var(--black)
    font-size: 22px
    font-weight: 400
    line-height: 44px

h3
    color: var(--black)
    margin-top: 0px
    margin-bottom: 10px
    font-size: 20px
    font-weight: 400
    line-height: 30px

h1,h2,h3  
  color: #000
// rgb(226, 19, 19)


.subtitle 
    clear: none
    text-align: center
    font-size: 14px
    font-weight: 150
    color: #bbb
    font-style: italic

p
  padding-bottom: 10px

$small: 600px
$medium: 800px
$large: 1200px

@media print, screen and (min-width: $medium)
  .list-container
    display: flex
    justify-content: center
    width: 100%
    border: 0px

@media print, screen and (max-width: $medium)
  .list-container
    justify-content: center
    display: block
    padding-left: 0px
    padding-right: 0px
    flex-wrap: wrap

.content-centerer
  display: flex
  justify-content: center
  width: 100%

//.content-centerer img 
//  display: block


@media screen and (max-width: $small)
  .fullwidth-item
    padding-left: 10px
    padding-right: 10px

@media screen and (min-width: $small) and (max-width: $medium)
  .fullwidth-item
    padding-left: 0px
    padding-right: 0px

@media screen and (min-width: $medium) and (max-width: $large)
  .fullwidth-item
    width: 90%
    
@media screen and (min-width: $large)
  .fullwidth-item
    width: 80%

.list-col-2
  padding-left: 20px
  padding-top: 10px
  padding-right: 20px
  padding-bottom: 10px
  border: 0px
  min-width: 150px
//flex: none

@media print, screen and (min-width: $medium)
  .list-col-2
    width: 50%
    
@media print, screen and (max-width: $medium)
  .list-col-2
    width: 100%

.list-col-2:hover
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)

.grid-container 
  display: grid
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr))
  gap: 30px


.list-col-3
  text-align: center
  padding: 10px
  border: 0px
  flex: none

.list-col-3:hover
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2)


.post-item-title
  text-align: center

